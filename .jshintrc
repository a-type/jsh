{
  "bitwise"       : true,
  "camelcase"     : true,
  "curly"         : true,
  "eqeqeq"        : true,
  "forin"         : false,
  "immed"         : true,
  "indent"        : "tab",
  "latedef"       : true,
  "newcap"        : true,
  "noarg"         : true,
  "noempty"       : true,
  "nonew"         : true,
  "plusplus"      : true,
  "quotmark"      : "single",
  "esversion"     : 6,
  "undef"         : true,
  "unused"        : true,
  "strict"        : true,
  "globalstrict"  : true,
  "trailing"      : true,
  "maxparams"     : 3,
  "maxdepth"      : 3,
  "maxstatements" : 300,
  "maxlen"        : 120,

  "node"          : true,

  "ignores"       : [ "node_modules/**/*.js" ]
}
